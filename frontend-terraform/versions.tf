# =============================================================================\n# TERRAFORM AND PROVIDER VERSION CONSTRAINTS\n# =============================================================================\n\n# Terraform configuration for NewsArchive Pro Frontend Infrastructure\n# Defines minimum versions and provider requirements for stable deployment\nterraform {\n  # Provider version constraints\n  required_providers {\n    # AWS Provider - Primary cloud provider for S3, CloudFront, and related services\n    aws = {\n      source  = \"hashicorp/aws\"\n      version = \"~> 5.0\"  # AWS Provider v5.x for latest features and security updates\n    }\n    \n    # Null Provider - Used for local provisioners and data processing if needed\n    null = {\n      source  = \"hashicorp/null\"\n      version = \"~> 3.2\"  # Stable null provider version\n    }\n  }\n  \n  # Minimum Terraform version requirement\n  required_version = \">= 1.0.0\"  # Terraform 1.0+ for stable state management and features\n}